{
  "name": "tailwindcss-wp-global-styles",
  "version": "0.2.4",
  "description": "A TailwindCSS Plugin to take global styles from WordPress and convert them to TailwindCSS",
  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "./index.js",
    "./index.d.ts",
    "./utils.js"
  ],
  "repository": "https://github.com/natac13/tailwindcss-wp-global-styles",
  "keywords": [
    "tailwindcss",
    "wordpress",
    "headless",
    "css",
    "postcss",
    "tailwind",
    "tailwindcss-plugin"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write ."
  },
  "author": "Sean Campbell <sean.campbell13@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "useTabs": true,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "devDependencies": {
    "@types/css": "^0.0.33",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "css": "^3.0.0"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0 || insiders"
  }
}
